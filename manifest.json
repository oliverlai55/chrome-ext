{
  "manifest_version": 2,
  "name": "My Cool Extension",
  "version": "1.0",
  "background": {
    "scripts": ["background.js"]
  },
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "permissions": [
    "activeTab"
  ]
}

// the content script can interact with the web page, such as pulling the URL out of current page.
// But content script cannot talk to Chrome API, it needs the background script to do something
